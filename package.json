{
    "name": "express-template",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/DefectingCat/express-template.git",
    "author": "DefectingCat <i@defect.ink>",
    "type": "module",
    "license": "MIT",
    "bin": "./build/agent/index.js",
    "pkg": {
        "scripts": "build/agent/**/*.js",
        "targets": [
            "node16-linux-x64"
        ],
        "outputPath": "dist"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^18.7.14",
        "@types/node-schedule": "^2.1.0",
        "cross-env": "^7.0.3",
        "nodemon": "^2.0.19",
        "pkg": "^5.8.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.2"
    },
    "dependencies": {
        "axios": "^1.1.3",
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "express-winston": "^4.2.0",
        "helmet": "^6.0.0",
        "node-schedule": "^2.1.0",
        "socket.io": "^4.5.3",
        "socket.io-client": "^4.5.3",
        "winston": "^3.8.1",
        "zx": "^7.1.1"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development node --loader ts-node/esm src/main.ts",
        "build": "tsc",
        "start": "cross-env NODE_ENV=production node build/main.js"
    }
}